{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./attached_assets/*"],
      "@/*": ["./client/src/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "vite.config.ts",
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
